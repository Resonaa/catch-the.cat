{
	"$schema": "https://biomejs.dev/schemas/2.3.8/schema.json",
	"assist": {
		"actions": {
			"source": {
				"organizeImports": {
					"level": "on",
					"options": {
						"groups": [
							":BUN:",
							":BLANK_LINE:",
							":NODE:",
							":BLANK_LINE:",
							["npm:*", "npm:*/**"],
							":BLANK_LINE:",
							":PACKAGE_WITH_PROTOCOL:",
							":BLANK_LINE:",
							":URL:",
							":BLANK_LINE:",
							"poly*",
							":BLANK_LINE:",
							":PACKAGE:",
							":BLANK_LINE:",
							"/**",
							":BLANK_LINE:",
							["#*", "#*/**"],
							":BLANK_LINE:",
							"@/**",
							":BLANK_LINE:",
							"~/**",
							":BLANK_LINE:",
							":PATH:"
						]
					}
				},
				"useSortedAttributes": "on",
				"useSortedKeys": "on",
				"useSortedProperties": "on"
			}
		}
	},
	"css": {
		"formatter": {
			"enabled": true
		}
	},
	"files": {
		"ignoreUnknown": true,
		"includes": [
			"**",
			"!**/dist",
			"!**/static",
			"!**/public",
			"!**/node_modules",
			"!**/target",
			"!bun.lock"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"html": {
		"formatter": {
			"enabled": true
		}
	},
	"javascript": {
		"formatter": {
			"arrowParentheses": "asNeeded",
			"quoteStyle": "double",
			"trailingCommas": "none"
		}
	},
	"json": {
		"formatter": {
			"enabled": true
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"correctness": {
				"noUnknownProperty": "off"
			},
			"recommended": true,
			"style": {
				"noInferrableTypes": "error",
				"noParameterAssign": "error",
				"noUnusedTemplateLiteral": "error",
				"noUselessElse": "error",
				"useAsConstAssertion": "error",
				"useDefaultParameterLast": "error",
				"useEnumInitializers": "error",
				"useNumberNamespace": "error",
				"useSelfClosingElements": "error",
				"useSingleVarDeclarator": "error"
			}
		}
	},
	"vcs": {
		"clientKind": "git",
		"enabled": false,
		"useIgnoreFile": false
	}
}
